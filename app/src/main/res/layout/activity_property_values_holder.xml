<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bonc.demopractice_allkinsoff.property.PropertyValuesHolderActivity">

    <Button
        android:id="@+id/btStartAnim"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="StartProperty"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btCancelAnim"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="CancelProperty"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btStartAnim"
        android:layout_alignBottom="@+id/btStartAnim"/>

    <Button
        android:id="@+id/btOfObject"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="OfObject"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btCancelAnim"
        android:layout_alignBottom="@+id/btStartAnim"/>

    <bonc.demopractice_allkinsoff.property.ObjTextView
        android:id="@+id/flAnimator"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#ff0000ff"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:id="@+id/ivKeyframe"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/flAnimator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@mipmap/phone"/>

</RelativeLayout>
