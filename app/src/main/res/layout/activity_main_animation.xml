<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bonc.demopractice_allkinsoff.Animation.MainAnimationActivity">

    <Button
        android:id="@+id/btScale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="xml文件生成Animation动画"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btInterpolator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Java代码生成Animation动画"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btValueAnimator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="ValueAnimator基本使用"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btSeniorAnimator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="ValueAnimator高级进阶01"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btObjectAnimator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="ValueAnimator进阶01ObjectAnimator"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btPropertyValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="PropertyValuesHolderActivity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btAnimatorSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="AnimatorSetActivity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btAnimateXML"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="AnimateXMLActivity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btLayoutChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="LayoutChangeActivity"
        android:textAllCaps="false"/>
</LinearLayout>
