<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bonc.demopractice_allkinsoff.click.ClickActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSimpleClick"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="测试单击"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/main_edit"/>

        <TextView
            android:id="@+id/tvSimpleResult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="测试结果"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDoubleClick"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="测试双击"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/main_edit"/>

        <TextView
            android:id="@+id/tvDoubleResult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="测试结果"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLongClick"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="测试长按"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/main_edit"/>

        <TextView
            android:id="@+id/tvLongResult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="测试结果"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvHtml"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:autoLink="all"
        android:background="@color/Blue_700"/>

</LinearLayout>
