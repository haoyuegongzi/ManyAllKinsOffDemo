<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#a2d0ff"
    tools:context="bonc.demopractice_allkinsoff.scrollview.VerticalScrollViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvLast"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="上一张"
                android:gravity="center"
                android:background="#bbbbbb"
                android:layout_marginLeft="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

            <TextView
                android:id="@+id/tvNext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="下一张"
                android:gravity="center"
                android:background="#bbbbbb"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivScroll"
            android:layout_width="256dp"
            android:layout_height="171dp"
            android:src="@drawable/spring01"
            android:scaleType="center"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/ivScrollImage"
            android:layout_width="256dp"
            android:layout_height="171dp"
            android:src="@drawable/spring01"
            android:scaleType="center"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/ivScrollImage02"
            android:layout_width="256dp"
            android:layout_height="171dp"
            android:src="@drawable/spring01"
            android:scaleType="center"
            android:layout_gravity="center_horizontal"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvVerticalRecycler"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#cfc3ed"
            android:layout_margin="15dp"/>

        <!--<bonc.demopractice_allkinsoff.scrollview.MyRecyclerView-->
            <!--android:id="@+id/rvVerticalRecycler"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp"-->
            <!--android:background="#cfc3ed"/>-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/shuchang"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

        <bonc.demopractice_allkinsoff.image.AdaptiveImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/shuchang"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

    </LinearLayout>
</ScrollView>
